<h2>Your Reviews</h2>

<% @reviews.each do |review| %>
        <p><%= link_to review.shop.name, shop_path(review.shop) %></p>
        <p><%= review.content %></p>
        <%= link_to "Edit Review", edit_user_review_path(current_user.id , review) %>
        <%= link_to "Delete Review", user_review_path(current_user.id , review), method: :delete %>
<% end %>