<h4><%= @shop.name %></h4>
<%= form_with model: @review, url: shop_reviews_path, class: "new_review_form" do |f| %> 
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :shop_id, value: @shop.id %>
    <%= f.submit "Submit Review" %>
<% end %>