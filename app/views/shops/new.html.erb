<%= form_with model: @shop, class: "new_form" do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, required: true%>
    <%= f.label :website %>
    <%= f.text_field :website, required: true %>
    <%= f.label :address_street, "Street" %>
    <%= f.text_field :address_street, required: true %>
    <%= f.label :address_city, "City" %>
    <%= f.text_field :address_city, required: true %>
    <%= f.label :address_state, "State"  %>
    <%= f.text_field :address_state, required: true %>
    <%= f.label :address_zipcode, "Zipcode" %>
    <%= f.text_field :address_zipcode, required: true %>
    <%= f.label :neighborhood %>
    <%= f.select(:neighborhood, options_for_select([
        ['Adams Morgan'],
        ['Bloomingdale'],
        ['Brookland'],
        ['Capitol Hill'],
        ['Chinatown'],
        ['Cleveland Park'],
        ['Columbia Heights'],
        ['Downtown'],
        ['Dupont Circle'],
        ['Eckington'],
        ['Friendship Heights'],
        ['Foggy Bottom'],
        ['Georgetown'],
        ['Glover Park'],
        ['Ivy City'],
        ['LeDroit Park'],
        ['Logan Circle'],
        ['Mount Pleasant'],
        ['Mount Vernon Square'],
        ['Navy Yard'],
        ['NoMa'],
        ['Penn Quarter'],
        ['Petworth'],
        ['Shaw'],
        ['Trinidad'],
        ['U Street'],
        ['West End'],
        ['Woodley Park']])) %>
    <%= f.label :seating %>
    <%= f.select(:seating, options_for_select([['Ample'], ['Limited']])) %>
    <%= f.select(:food, options_for_select([['Full menu'], ['Grab and go'], ['Pastries only']])) %>
    <%= f.label :wifi %>
    <%= f.check_box :wifi %>
    <%= f.label :outlets %>
    <%= f.check_box :outlets %>
    <%= f.submit "Create Coffee Shop" %>
<% end %>